[Unit]
Description=LMS Gunicorn daemon
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/lms
Environment="PATH=/var/www/lms/venv/bin"
ExecStart=/var/www/lms/venv/bin/gunicorn --config gunicorn.conf.py lms_project.wsgi:application
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
